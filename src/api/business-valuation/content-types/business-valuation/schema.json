      "enum": [
        "fair_market_value",
        "fair_value",
        "investment_value",
        "intrinsic_value"
      ]
    },
    "premiseOfValue": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "going_concern",
        "liquidation"
      ]
    },
    "annualRevenue": {
      "type": "decimal",
      "min": 0
    },
    "grossProfit": {
      "type": "decimal"
    },
    "netIncome": {
      "type": "decimal"
    },
    "ebitda": {
      "type": "decimal"
    },
    "totalAssets": {
      "type": "decimal",
      "min": 0
    },
    "totalLiabilities": {
      "type": "decimal",
      "min": 0
    },
    "cashAndEquivalents": {
      "type": "decimal",
      "min": 0
    },
    "accountsReceivable": {
      "type": "decimal",
      "min": 0
    },
    "inventory": {
      "type": "decimal",
      "min": 0
    },
    "fixedAssets": {
      "type": "decimal",
      "min": 0
    },
    "intangibleAssets": {
      "type": "decimal",
      "min": 0
    },
    "goodwill": {
      "type": "decimal",
      "min": 0
    },
    "shortTermDebt": {
      "type": "decimal",
      "min": 0
    },
    "longTermDebt": {
      "type": "decimal",
      "min": 0
    },
    "totalDebt": {
      "type": "decimal",
      "min": 0
    },
    "marketConditions": {
      "type": "enumeration",
      "enum": [
        "excellent",
        "good",
        "fair",
        "poor",
        "declining"
      ]
    },
    "competitivePosition": {
      "type": "enumeration",
      "enum": [
        "market_leader",
        "strong_competitor",
        "average",
        "weak",
        "struggling"
      ]
