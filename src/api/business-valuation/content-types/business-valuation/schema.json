{
  "kind": "collectionType",
  "collectionName": "business_valuations",
  "info": {
    "singularName": "business-valuation",
    "pluralName": "business-valuations",
    "displayName": "Business Valuation"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "companyName": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "businessRegistrationNumber": {
      "type": "string",
      "maxLength": 100
    },
    "industry": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "businessType": {
      "type": "enumeration",
      "enum": ["sole_proprietorship", "partnership", "corporation", "llc", "cooperative"],
      "required": true
    },
    "establishedDate": {
      "type": "date"
    },
    "numberOfEmployees": {
      "type": "integer",
      "min": 0
    },
    
    "valuationDate": {
      "type": "date",
      "required": true
    },
    "reportDate": {
      "type": "date",
      "required": true
    },
    "valuationPurpose": {
      "type": "enumeration",
      "enum": ["merger_acquisition", "tax_compliance", "financial_reporting", "litigation", "estate_planning", "divorce", "buy_sell_agreement", "employee_stock_ownership", "other"],
      "required": true
    },
    "valuationPurposeOther": {
      "type": "text"
    },
    "standardOfValue": {
      "type": "enumeration",
      "enum": ["fair_market_value", "fair_value", "investment_value", "intrinsic_value"],
      "required": true
    },
    "premiseOfValue": {
      "type": "enumeration",
      "enum": ["going_concern", "liquidation"],
      "required": true
    },
    
    "annualRevenue": {
      "type": "decimal",
      "min": 0
    },
    "grossProfit": {
      "type": "decimal"
    },
    "netIncome": {
      "type": "decimal"
    },
    "ebitda": {
      "type": "decimal"
    },
    "totalAssets": {
      "type": "decimal",
      "min": 0
    },
    "totalLiabilities": {
      "type": "decimal",
      "min": 0
    },
    "cashAndEquivalents": {
      "type": "decimal",
      "min": 0
    },
    "accountsReceivable": {
      "type": "decimal",
      "min": 0
    },
    "inventory": {
      "type": "decimal",
      "min": 0
    },
    "fixedAssets": {
      "type": "decimal",
      "min": 0
    },
    "intangibleAssets": {
      "type": "decimal",
      "min": 0
    },
    "goodwill": {
      "type": "decimal",
      "min": 0
    },
    
    "shortTermDebt": {
      "type": "decimal",
      "min": 0
    },
    "longTermDebt": {
      "type": "decimal",
      "min": 0
    },
    "totalDebt": {
      "type": "decimal",
      "min": 0
    },
    
    "marketConditions": {
      "type": "enumeration",
      "enum": ["excellent", "good", "fair", "poor", "declining"]
    },
    "competitivePosition": {
      "type": "enumeration",
      "enum": ["market_leader", "strong_competitor", "average", "weak", "struggling"]
    },
    "customerBase": {
      "type": "enumeration",
      "enum": ["highly_diversified", "moderately_diversified", "concentrated", "very_concentrated"]
    },
    "customerDependency": {
      "type": "text"
    },
    
    "assetApproachUsed": {
      "type": "boolean",
      "default": false
    },
    "incomeApproachUsed": {
      "type": "boolean",
      "default": false
    },
    "marketApproachUsed": {
      "type": "boolean",
      "default": false
    },
    
    "bookValue": {
      "type": "decimal"
    },
    "adjustedBookValue": {
      "type": "decimal"
    },
    "liquidationValue": {
      "type": "decimal"
    },
    
    "discountedCashFlow": {
      "type": "decimal"
    },
    "capitalizedEarnings": {
      "type": "decimal"
    },
    "discountRate": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "capitalizationRate": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "terminalGrowthRate": {
      "type": "decimal"
    },
    
    "comparableCompanyMultiple": {
      "type": "decimal"
    },
    "precedentTransactionMultiple": {
      "type": "decimal"
    },
    "priceToEarningsRatio": {
      "type": "decimal"
    },
    "priceToBookRatio": {
      "type": "decimal"
    },
    "priceToSalesRatio": {
      "type": "decimal"
    },
    "evEbitdaRatio": {
      "type": "decimal"
    },
    
    "industryRisk": {
      "type": "enumeration",
      "enum": ["low", "moderate", "high", "very_high"]
    },
    "companySpecificRisk": {
      "type": "enumeration",
      "enum": ["low", "moderate", "high", "very_high"]
    },
    "managementRisk": {
      "type": "enumeration",
      "enum": ["low", "moderate", "high", "very_high"]
    },
    "financialRisk": {
      "type": "enumeration",
      "enum": ["low", "moderate", "high", "very_high"]
    },
    "operationalRisk": {
      "type": "enumeration",
      "enum": ["low", "moderate", "high", "very_high"]
    },
    
    "marketabilityDiscount": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "minorityDiscount": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "controlPremium": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "keyPersonDiscount": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    
    "indicatedValueAssetApproach": {
      "type": "decimal"
    },
    "indicatedValueIncomeApproach": {
      "type": "decimal"
    },
    "indicatedValueMarketApproach": {
      "type": "decimal"
    },
    "finalValuationConclusion": {
      "type": "decimal",
      "required": true
    },
    "valuationRange": {
      "type": "json"
    },
    
    "managementQuality": {
      "type": "enumeration",
      "enum": ["excellent", "good", "average", "below_average", "poor"]
    },
    "brandStrength": {
      "type": "enumeration",
      "enum": ["very_strong", "strong", "moderate", "weak", "very_weak"]
    },
    "customerRelationships": {
      "type": "enumeration",
      "enum": ["excellent", "good", "average", "below_average", "poor"]
    },
    "competitiveAdvantages": {
      "type": "text"
    },
    "businessStrengths": {
      "type": "text"
    },
    "businessWeaknesses": {
      "type": "text"
    },
    "futureProspects": {
      "type": "text"
    },
    
    "specialConsiderations": {
      "type": "text"
    },
    "assumptionsAndLimitations": {
      "type": "text"
    },
    "dataReliability": {
      "type": "enumeration",
      "enum": ["high", "moderate", "low", "very_low"]
    },
    "sourcesOfInformation": {
      "type": "text"
    },
    
    "valuatorName": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "valuatorCredentials": {
      "type": "string",
      "maxLength": 255
    },
    "valuatorCompany": {
      "type": "string",
      "maxLength": 255
    },
    "reviewerName": {
      "type": "string",
      "maxLength": 255
    },
    "reviewerCredentials": {
      "type": "string",
      "maxLength": 255
    },
    
    "valuationStatus": {
      "type": "enumeration",
      "enum": ["draft", "under_review", "completed", "approved", "archived"],
      "default": "draft"
    },
    "internalNotes": {
      "type": "text"
    },
    "clientNotes": {
      "type": "text"
    },
    
    "financialStatements": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["files"]
    },
    "supportingDocuments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["files"]
    },
    "valuationReport": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["files"]
    },
    
    "contactPerson": {
      "type": "string",
      "maxLength": 255
    },
    "contactEmail": {
      "type": "email"
    },
    "contactPhone": {
      "type": "string",
      "maxLength": 20
    },
    "businessAddress": {
      "type": "text"
    },
    
    "createdAt": {
      "type": "datetime"
    },
    "updatedAt": {
      "type": "datetime"
    }
  }
}