        "draft",
        "under_review",
        "completed",
        "approved",
        "archived"
      ]
    },
    "internalNotes": {
      "type": "text"
    },
    "clientNotes": {
      "type": "text"
    },
    "financialStatements": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "files"
      ]
    },
    "supportingDocuments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "files"
      ]
    },
    "valuationReport": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "files"
      ]
    },
    "contactPerson": {
      "type": "string",
      "maxLength": 255
    },
    "contactEmail": {
      "type": "email"
    },
    "contactPhone": {
      "type": "string",
      "maxLength": 20
    },
    "businessAddress": {
      "type": "text"
    }
