    "discountedCashFlow": {
      "type": "decimal"
    },
    "capitalizedEarnings": {
      "type": "decimal"
    },
    "discountRate": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "capitalizationRate": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "terminalGrowthRate": {
      "type": "decimal"
    },
    "comparableCompanyMultiple": {
      "type": "decimal"
    },
    "precedentTransactionMultiple": {
      "type": "decimal"
    },
    "priceToEarningsRatio": {
      "type": "decimal"
    },
    "priceToBookRatio": {
      "type": "decimal"
    },
    "priceToSalesRatio": {
      "type": "decimal"
    },
    "evEbitdaRatio": {
      "type": "decimal"
    },
    "industryRisk": {
      "type": "enumeration",
      "enum": [
        "low",
        "moderate",
        "high",
        "very_high"
      ]
    },
    "companySpecificRisk": {
      "type": "enumeration",
      "enum": [
        "low",
        "moderate",
        "high",
        "very_high"
      ]
    },
    "managementRisk": {
      "type": "enumeration",
      "enum": [
        "low",
        "moderate",
        "high",
        "very_high"
      ]
    },
    "financialRisk": {
      "type": "enumeration",
      "enum": [
        "low",
        "moderate",
        "high",
        "very_high"
      ]
    },
    "operationalRisk": {
      "type": "enumeration",
      "enum": [
        "low",
        "moderate",
        "high",
        "very_high"
      ]
    },
    "marketabilityDiscount": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "minorityDiscount": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "controlPremium": {
      "type": "decimal",
      "min": 0,
      "max": 100
