    "brandStrength": {
      "type": "enumeration",
      "enum": [
        "very_strong",
        "strong",
        "moderate",
        "weak",
        "very_weak"
      ]
    },
    "customerRelationships": {
      "type": "enumeration",
      "enum": [
        "excellent",
        "good",
        "average",
        "below_average",
        "poor"
      ]
    },
    "competitiveAdvantages": {
      "type": "text"
    },
    "businessStrengths": {
      "type": "text"
    },
    "businessWeaknesses": {
      "type": "text"
    },
    "futureProspects": {
      "type": "text"
    },
    "specialConsiderations": {
      "type": "text"
    },
    "assumptionsAndLimitations": {
      "type": "text"
    },
    "dataReliability": {
      "type": "enumeration",
      "enum": [
        "high",
        "moderate",
        "low",
        "very_low"
      ]
