    "applicantName": {
      "type": "string"
    },
    "appraiserName": {
      "type": "string"
    },
    "companyName": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "businessRegistrationNumber": {
      "type": "string",
      "maxLength": 100
    },
    "industry": {
      "type": "string",
      "maxLength": 100,
      "required": true
    },
    "businessType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "sole_proprietorship",
        "partnership",
        "corporation",
        "llc",
        "cooperative"
      ]
    },
    "establishedDate": {
      "type": "date"
    },
    "numberOfEmployees": {
      "type": "integer",
      "min": 0
    },
    "valuationDate": {
      "type": "date",
      "required": true
    },
    "reportDate": {
      "type": "date",
      "required": true
    },
    "valuationPurpose": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "merger_acquisition",
        "tax_compliance",
        "financial_reporting",
        "litigation",
        "estate_planning",
        "divorce",
        "buy_sell_agreement",
        "employee_stock_ownership",
        "other"
      ]
    },
    "valuationPurposeOther": {
      "type": "text"
    },
    "standardOfValue": {
      "type": "enumeration",
