{
  "kind": "collectionType",
  "collectionName": "loan_applications",
  "info": {
    "singularName": "loan-application",
    "pluralName": "loan-applications",
    "displayName": "Loan Application",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "applicant_name": {
      "type": "string"
    },
    "mother_name": {
      "type": "string"
    },
    "father_or_spouse_name": {
      "type": "string"
    },
    "current_address": {
      "type": "text"
    },
    "permanent_address": {
      "type": "text"
    },
    "national_id": {
      "type": "string"
    },
    "phone_number": {
      "type": "string"
    },
    "age": {
      "type": "integer"
    },
    "education_level": {
      "type": "enumeration",
      "enum": [
        "primary",
        "secondary",
        "hsc",
        "graduate",
        "postgraduate",
        "none"
      ]
    },
    "gender": {
      "type": "enumeration",
      "enum": [
        "male",
        "female",
        "other"
      ]
    },
    "marital_status": {
      "type": "enumeration",
      "enum": [
        "single",
        "married",
        "widow"
      ]
    },
    "loan_purpose": {
      "type": "text"
    },
    "loan_generation": {
      "type": "integer"
    },
    "user_of_loan": {
      "type": "enumeration",
      "enum": [
        "self",
        "spouse",
        "child",
        "other"
      ]
    },
    "business_type": {
      "type": "enumeration",
      "enum": [
        "new",
        "old"
      ]
    },
    "user_name": {
      "type": "string"
    },
    "user_nid": {
      "type": "string"
    },
    "loan_amount_requested": {
      "type": "integer"
    },
    "loan_duration_days": {
      "type": "integer"
    },
    "installment_type": {
      "type": "enumeration",
      "enum": [
        "weekly",
        "monthly"
      ]
    },
    "installment_amount": {
      "type": "integer"
    },
    "has_bkash_account": {
      "type": "boolean"
    },
    "bkash_account_number": {
      "type": "string"
    },
    "has_bank_account": {
      "type": "boolean"
    },
    "bank_name": {
      "type": "string"
    },
    "bank_branch": {
      "type": "string"
    },
    "bank_account_title": {
      "type": "string"
    },
    "bank_account_number": {
      "type": "string"
    },
    "application_date": {
      "type": "date"
    },
    "applicant_photo": {
      "type": "media",
      "multiple": false,
      "required": false
    },
    "user_nid_photo": {
      "type": "media",
      "multiple": false,
      "required": false
    },
    "guarantor_document": {
      "type": "media",
      "multiple": false,
      "required": false
    },
    "social_evaluation": {
      "type": "component",
      "component": "shared.social-evaluation",
      "repeatable": false
    },
    "approved_by": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "loan_status": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "Pending",
        "In Progress",
        "Approved"
      ]
    },
    "loan_acceptance": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::loan-acceptance.loan-acceptance",
      "mappedBy": "loan_application"
    },
    "installments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::installment.installment",
      "mappedBy": "loan_application"
    }
  }
}
