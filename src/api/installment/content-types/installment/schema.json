{
  "kind": "collectionType",
  "collectionName": "installments",
  "info": {
    "singularName": "installment",
    "pluralName": "installments",
    "displayName": "Installment",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "payment_date": {
      "type": "date"
    },
    "amount_to_pay": {
      "type": "integer"
    },
    "amount_paid": {
      "type": "integer"
    },
    "amount_due": {
      "type": "integer"
    },
    "remarks": {
      "type": "text"
    },
    "payment_status": {
      "type": "enumeration",
      "enum": [
        "paid",
        "unpaid",
        "partial",
        "overdue",
        "late",
        "invalid"
      ]
    },
    "loan_application": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::loan-application.loan-application",
      "inversedBy": "installments"
    },
    "payment_type": {
      "type": "enumeration",
      "enum": [
        "BKASH",
        "NOGOD",
        "CASH",
        "BANK"
      ]
    },
    "payment_doc": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "comment": {
      "type": "text"
    },
    "bank": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::bank.bank"
    }
  }
}
