{
  "collectionName": "components_shared_loanee_informations",
  "info": {
    "displayName": "Loanee Information"
  },
  "attributes": {
    "recipient_name": {
      "type": "string",
      "required": true
    },
    "national_id": {
      "type": "string",
      "required": true
    },
    "loan_amount": {
      "type": "decimal",
      "required": true
    },
    "cheque_no": {
      "type": "string",
      "required": false
    },
    "repayment_duration_unit": {
      "type": "enumeration",
      "enum": [
        "DAYS",
        "WEEK",
        "MONTH",
        "YEAR"
      ]
    },
    "recipient_signature": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "repayment_method": {
      "type": "enumeration",
      "enum": [
        "BANK",
        "BKASH",
        "NOGOD",
        "ROCKET",
        "CASE",
        "OTHER"
      ]
    },
    "repayment_duration": {
      "type": "integer"
    }
  }
}
